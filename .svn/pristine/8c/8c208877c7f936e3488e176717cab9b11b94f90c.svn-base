<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/beijing3"
    tools:context="com.example.test.Register" >

    <TextView
        android:id="@+id/registertextView_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_firstname"
        android:layout_below="@+id/registertextView_firstname"
        android:layout_marginTop="22dp"
        android:text="@string/register_textView_lastname" />

    <TextView
        android:id="@+id/registertextView_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="26dp"
        android:text="@string/register_textView_firstname" />

    <TextView
        android:id="@+id/registertextView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_lastname"
        android:layout_below="@+id/registertextView_lastname"
        android:layout_marginTop="27dp"
        android:text="@string/register_textView_email" />

    <TextView
        android:id="@+id/registertextView_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_email"
        android:layout_below="@+id/registertextView_email"
        android:layout_marginTop="30dp"
        android:text="@string/register_textView_gender" />

    <TextView
        android:id="@+id/registertextView_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_gender"
        android:layout_below="@+id/registertextView_gender"
        android:layout_marginTop="16dp"
        android:text="@string/register_textView_password" />

    <TextView
        android:id="@+id/registertextView_confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_password"
        android:layout_below="@+id/registertextView_password"
        android:layout_marginTop="25dp"
        android:text="@string/register_textView_confirm" />

    <TextView
        android:id="@+id/registertextView_Moodsignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_confirmpassword"
        android:layout_below="@+id/registertextView_confirmpassword"
        android:layout_marginTop="28dp"
        android:text="@string/register_textView_siganture" />

    <EditText
        android:id="@+id/personaleditText_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registertextView_lastname"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/registertextView_firstname"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/register_editText_firstname" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/registereditText_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registertextView_email"
        android:layout_alignBottom="@+id/registertextView_email"
        android:layout_toRightOf="@+id/registertextView_password"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/register_editText_email" />

    <EditText
        android:id="@+id/registereditText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registertextView_password"
        android:layout_alignBottom="@+id/registertextView_password"
        android:layout_alignLeft="@+id/personaleditText_email"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/register_editText_password" />

    <EditText
        android:id="@+id/registereditText_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registertextView_confirmpassword"
        android:layout_alignBottom="@+id/registertextView_confirmpassword"
        android:layout_alignLeft="@+id/registereditText_password"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/register_editText_confirm" />

    <EditText
        android:id="@+id/registereditText_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registertextView_email"
        android:layout_alignLeft="@+id/personaleditText_email"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/register_editText_lastname" />

    <EditText
        android:id="@+id/registereditText_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registertextView_Moodsignature"
        android:layout_below="@+id/registertextView_Moodsignature"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="@string/register_editText_signature" />

    <Button
        android:id="@+id/registerbutton_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registereditText_signature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/register_button_register" />

    <RadioGroup
        android:id="@+id/ragester_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/registertextView_gender"
        android:layout_toRightOf="@+id/registertextView_firstname"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/register_male_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male" />

        <RadioButton
            android:id="@+id/register_female_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

</RelativeLayout>
